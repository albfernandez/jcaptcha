<assembly>
  <id>dist</id>  
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>  
  <files>
    <file>
      <source>jcaptcha/LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>src/assembly/README.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>   
  </files>
  <fileSets>
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    		<exclude>*findsecbugs-plugin*</exclude>
    	</excludes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    		<exclude>*findsecbugs-plugin*</exclude>
    	</excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>backgrounds/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>fisheyebackgrounds/*</include>
        <include>gimpybackgrounds/*</include>
      </includes>
    </fileSet>

    
    <fileSet>
    	<directory>integration-simple-servlet/target/</directory>
    	<outputDirectory>integrations/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    		<exclude>*findsecbugs-plugin*</exclude>
    	</excludes>    	
    </fileSet> 
    
    
    <!--  Dependencies -->
    <fileSet>
    	<directory>samples/simple-servlet-image-sample/target/jcaptcha-integration-simple-servlet-sample/WEB-INF/lib/</directory>
    	<outputDirectory>lib/</outputDirectory>
    	<includes>
    		<include>commons-*.jar</include>
    		<include>filters-*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    		<exclude>*findsecbugs-plugin*</exclude>
    	</excludes>  
    </fileSet>
    
    <!-- javadoc -->
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>

    <!-- sources -->
    
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>

    
    <fileSet>
      <directory>integration-simple-servlet/target/</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>    
  </fileSets>
  
</assembly>
