      <excludes>
        <exclude>.svn</exclude>
      </excludes>
    </fileSet>
     -->
    <fileSet>
    	<directory>extension-buffered-engine/target/</directory>
    	<outputDirectory>extensions/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>    	
    </fileSet> 
    <fileSet>
    	<directory>extension-jbosscache-store/target/</directory>
    	<outputDirectory>extensions/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>    	
    </fileSet> 
    <fileSet>
    	<directory>extension-sound-freetts/target/</directory>
    	<outputDirectory>extensions/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>    	
    </fileSet> 
    
    <fileSet>
    	<directory>integration-simple-servlet/target/</directory>
    	<outputDirectory>integrations/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>    	
    </fileSet> 
    
    
    <!--  Dependencies -->
    <fileSet>
    	<directory>samples/simple-servlet-image-sample/target/jcaptcha-integration-simple-servlet-sample/WEB-INF/lib/</directory>
    	<outputDirectory>lib/</outputDirectory>
    	<includes>
    		<include>commons-*.jar</include>
    		<include>filters-*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>  
    </fileSet>
    
    <!-- javadoc -->
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-buffered-engine/target/</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-jbosscache-store/target/</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-sound-freetts/target/</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>integration-simple-servlet/target/</directory>
      <outputDirectory>docs/api-docs/</outputDirectory>
    	<includes>
    		<include>*javadoc*.jar</include>
    	</includes>
    </fileSet>
    <!-- sources -->
    
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-buffered-engine/target/</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-jbosscache-store/target/</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>extension-sound-freetts/target/</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    <fileSet>
      <directory>integration-simple-servlet/target/</directory>
      <outputDirectory>sources/</outputDirectory>
    	<includes>
    		<include>*sources*.jar</include>
    	</includes>
    </fileSet>
    
  </fileSets>
  
