<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>  
  <files>
    <file>
      <source>jcaptcha/LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>src/assembly/README.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>   
  </files>
  <fileSets>
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>
    </fileSet>
    <fileSet>
      <directory>api/target</directory>
      <outputDirectory>/</outputDirectory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>*sources*</exclude>
    		<exclude>*javadoc*</exclude>
    	</excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>backgrounds/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>fisheyebackgrounds/*</include>
        <include>gimpybackgrounds/*</include>
      </includes>
    </fileSet>
    <!-- 
    <fileSet>
      <directory>site-deploy</directory>
      <outputDirectory>/docs/</outputDirectory>
    </fileSet>
     -->
    <!-- 
    <fileSet>
      <directory>samples</directory>
